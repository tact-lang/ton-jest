{
  "name": "ton-jest",
  "version": "0.0.1",
  "main": "dist/index.js",
  "repository": "https://github.com/tact-lang/ton-jest.git",
  "author": "Steve Korshakov <steve@korshakov.com>",
  "description": "Jest matchers for TON contracts",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "gen": "ts-node ./scripts/gen-codepage.ts",
    "build": "tsc --declaration",
    "test": "jest",
    "clean": "rm -fr dist",
    "release": "yarn clean && yarn build && yarn test && release-it --npm.yarn1"
  },
  "devDependencies": {
    "@release-it/keep-a-changelog": "^3.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.5",
    "jest": "^29.5.0",
    "release-it": "^15.5.1",
    "ton": "^13.4.1",
    "ton-core": "^0.49.0",
    "ton-crypto": "^3.2.0",
    "typescript": "^5.0.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1"
  },
  "peerDependencies": {
    "ton-core": ">=0.49.0",
    "ton-crypto": "^3.2.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md"
      }
    }
  }
}